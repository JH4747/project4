<div class="page-header">
  <h2><%=Time.now%></h2>


  <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">
      <h3>Profile</h3>
      <thead>
        <tr>
          <th>Avatar</th>
          <th>User ID</th>
          <th>Name</th>
          <th>Contact</th>
          <th>Address</th>
          <th>Gender</th>
          <th>Select Options</th>
        </tr>
      </thead>

      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= image_tag profile.avatar_url(:display) %></td>
            <td><%= profile.user_id %></td>
            <td><%= profile.name %></td>
            <td><%= profile.contact %></td>
            <td><%= profile.address %></td>
            <td><%= profile.gender %></td>
            <td><%= link_to 'Show', profile %>
            <%= link_to 'Edit', edit_profile_path(profile) %>
            <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



