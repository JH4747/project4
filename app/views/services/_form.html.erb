<%= form_for(@service, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :initiated_by, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :initiated_by, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag 'task_babysit', 'Babysitting', class: "col-sm-3 control-label"  %>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Babysitting', checked('Babysitting'), id: 'task_babysit' %>
    </div>

    <%= label_tag 'task_householdchores', 'Household Chores' , class: "col-sm-2 control-label"%>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Household Chores', checked('Household Chores'), id: 'task_householdchores' %>
    </div>

    <%= label_tag 'task_marketing', 'Marketing' , class: "col-sm-1 control-label" %>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Marketing', checked('Marketing'), id: 'task_marketing' %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
