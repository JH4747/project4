<div class="page-header">
  <%= link_to reviews_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_review_path(@review), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show review</h1>
</div>

<dl class="dl-horizontal">
  <dt>Review text:</dt>
  <dd><%= @review.review_text %></dd>

  <dt>Reviewer:</dt>
  <dd><%= @review.reviewer_id %></dd>

  <dt>Reviewee:</dt>
  <dd><%= @review.reviewee_id %></dd>

</dl>
