<%= form_for(@service, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="form-group">
      <%= f.label "Type of Help", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:service_type,options_for_select([['Seeking Help', 'Seeking Help'],['Offering Help', 'Offering Help']]),{include_blank: true}) %>
      </div>
    </div>

  </div>
  <div class="form-group ">
    <%= f.label "List of task", class: "col-sm-2 control-label" %>

    <%= label_tag 'task_babysit', 'Babysit', class: "col-sm-3 control-label"  %>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Babysit', checked('Babysit'), id: 'task_babysit' %>
    </div>

    <%= label_tag 'task_householdchores', 'Household Chores' , class: "col-sm-4 control-label"%>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Household Chores', checked('Household Chores'), id: 'task_householdchores' %>
    </div>

    <%= label_tag 'task_elderly', 'Elderly Care', class: "col-sm-3 control-label"  %>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Elderly Care', checked('Elderly Care'), id: 'task_elderlycare' %>
    </div>

    <%= label_tag 'task_marketing', 'Marketing' , class: "col-sm-3 control-label" %>
    <div class="col-sm-1">
    <%= check_box_tag 'service[task_list][]', 'Marketing', checked('Marketing'), id: 'task_marketing' %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-7">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
